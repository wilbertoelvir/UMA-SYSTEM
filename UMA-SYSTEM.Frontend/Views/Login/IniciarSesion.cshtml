@{
    Layout = null;
}

<!DOCTYPE html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<html>
<head>
    <style>
        body {
            background-image: url('/images/11.jpg');
            background-size: cover; 
            background-repeat: no-repeat; 
        }

        .card {
            background-color: rgba(255, 255, 255, 0.8); 
            border: 1px solid #ddd; 
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card bg-success text-white">
                    <div class="card-header d-flex justify-content-center">
                        <img src="/images/uma.png" style="width: 150px; height: auto;" />                       
                    </div>
                    <div class="card-body">

                        <form asp-controller="Login" asp-action="IniciarSesion" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Usuario" required name="email" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="contraseña" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿No tienes una cuenta? <a href="@Url.Action("Registro","Login")" class="text-info"> Registraste!</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@if (ViewData["AlertMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Error',
                text: '@ViewData["AlertMessage"]',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

@if (TempData["Message"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Exito',
                text: '@TempData["Message"]',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

